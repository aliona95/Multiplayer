<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextureView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textureView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            xmlns:android="http://schemas.android.com/apk/res/android"
            tools:ignore="ObsoleteLayoutParam">
        </TextureView>

        <TextView
            android:text="METIMAS!!!"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="150dp"
            android:id="@+id/textViewThrowing" />

        <Button
            android:text="Metimas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:id="@+id/throwingButton"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="285dp"/>

        <ImageView
            android:id="@+id/personView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="125dp"
            fab:srcCompat="@drawable/person" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="138dp"
            android:layout_height="152dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="480dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:src="@drawable/glossy_ball1"
            android:background="@null"
            tools:ignore="RtlHardcoded"  />
        <!--<TextView
            android:id="@+id/textView1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="9"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="530dp"
            android:adjustViewBounds="true"
            android:textSize="15dp"/>-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="515dp"
            android:adjustViewBounds="true"
            android:text="9"
            android:textColor="@color/colorAccent"
            android:textSize="55dp" />

    <!-- -pakeisti activity i ImageButton-->
    <ImageButton
        android:id="@+id/action_map"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/map" />
</FrameLayout>

<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/radar1"
    android:id="@+id/radar"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="11dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/blip"
        android:layout_marginTop="200dp"
        android:id="@+id/blip"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-16dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="67dp"
            fab:srcCompat="@drawable/heart"
            android:id="@+id/heart3"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="16dp" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="67dp"
            fab:srcCompat="@drawable/heart"
            android:id="@+id/heart2"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="16dp" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="67dp"
            fab:srcCompat="@drawable/heart"
            android:id="@+id/heart1"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="16dp" />
    </RelativeLayout>

<ProgressBar
    android:id="@+id/firstBar"
    android:layout_width="200dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="100dp"
    android:layout_centerHorizontal="true"
    style="@android:style/Widget.ProgressBar.Horizontal"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/radar" />
<!-- android:progressDrawable="@drawable/custom_progress" -->

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        fab:fab_addButtonColorNormal="@color/green"
        fab:fab_addButtonColorPressed="@color/green_pressed"
        fab:fab_addButtonPlusIconColor="@color/yellow">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_map1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_location_on_black_24dp"
            fab:fab_colorNormal="@color/yellow"
            fab:fab_size="normal"
            fab:fab_colorPressed="@color/yellow_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_chat_bubble_black_24dp"
            fab:fab_colorNormal="@color/yellow"
            fab:fab_size="normal"
            fab:fab_colorPressed="@color/yellow_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_assignment_black_24dp"
            fab:fab_colorNormal="@color/yellow"
            fab:fab_size="normal"
            fab:fab_colorPressed="@color/yellow_pressed"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>

